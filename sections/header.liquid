    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "header",
      "content": {
        "en": "Countdown"
      }
    },
    {
      "type": "text",
      "id": "countdown_label",
      "label": "Countdown Label"
    },
    {
      "type": "text",
      "id": "countdown_date",
      "label": "Countdown Date"
    },
    {
      "type": "url",
      "id": "countdown_link",
      "label": "Countdown Link"
    },
    {
      "type": "header",
      "content": {
        "en": "Main Navigation"
      }
    },
    {
      "type": "link_list",
      "id": "header_links",
      "label": "Main Nav Bar"
    },
    {
      "type": "header",
      "content": {
        "en": "Ticker"
      }
    },
    {
      "type": "text",
      "id": "ticker_text",
